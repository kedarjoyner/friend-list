<% include ../partials/header %>

  <div class="container">
    <header class="jumbotron">
      <div class="container text-center">
        <h1><span class="glyphicon glyphicon-tent tent-icon" aria-hidden="true"></span> Welcome to YelpCamp</h1>
            <a class="btn btn-primary btn-lg btn-new-campground" href="/campgrounds/new">Add New Campground</a>
        </p>
      </div>
    </header>

    <!-- <div class="row">
      <div class="col-lg-12">
        <h3>Most Popular Campgrounds</h3>
      </div>
    </div> -->

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% campgrounds.forEach(function(campground){ %>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail thumbnail-style">
              <img src="<%= campground.image %>" alt="Campground Image" width="600">
              <div class="caption">
                <h4><%= campground.name %></h4>
              </div>
              <p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View More</a>
              </p>
            </div>
          </div>
      <% }); %>
    </div>
</div>

<% include ../partials/footer %>
